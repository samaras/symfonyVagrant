<VirtualHost *:80>
  ServerName <%= @params[:server_name] %>
  
  DocumentRoot "<%= @params[:docroot] %>"
  DirectoryIndex <%= @params[:dirindex] %>
  
  <Directory "<%= @params[:docroot] %>">
    Options FollowSymLinks
    AllowOverride All
    Order Allow,Deny
    Allow from All
  </Directory>

  LogLevel info
  ErrorLog <%= node["apache"]["log_dir"] %>/<%= @params[:app_name] %>-error.log
  CustomLog <%= node["apache"]["log_dir"] %>/<%= @params[:app_name] %>-access.log combined
</VirtualHost>
